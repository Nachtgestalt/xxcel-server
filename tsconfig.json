{
   "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "module": "commonjs",
      "target": "es6",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "typeRoots": [
         "node_modules/@types"
      ],
      "lib": [
         "es5",
         "es6"
      ],
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true
   },
   "exclude": [
      "dist",
      "build",
      "node_modules"
   ]
}
